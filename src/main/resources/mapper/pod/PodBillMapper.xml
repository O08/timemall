<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.norm.timemall.app.pod.mapper.PodBillMapper">
    <sql id="tableName">
        bill
    </sql>

    <sql id="baseColumn">
        id,stage,amount,voucher,mark,order_id,create_at,modified_at
    </sql>
    <select id="selectBillPageByUserId" resultType="com.norm.timemall.app.pod.domain.ro.PodBillsRO">
        select b.stage,d.brand_name brand,d.cell_title service,b.amount,b.id billId,b.voucher
        from bill b
        inner join order_details d on b.order_id = d.id
        where d.consumer_id = #{user_id}
        and b.mark = #{mark}
    </select>

</mapper>